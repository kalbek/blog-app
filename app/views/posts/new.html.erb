<!-- app/views/posts/new.html.erb -->
<div class="flex-centered">
<div class="flex-column-centered new-post mt-4 br-5">
    <h1>Create New Post</h1>
    <%= form_with(model: @post, url: posts_path) do |form| %>
        <div class="flex-column">
        <div class="flex">
            <%= form.label :title %>
            <%= form.text_field :title, class: "title-text-field" %>
        </div>
        <div class="flex">
            <%= form.label :text %>
            <%= form.text_area :text, class: "custom-text-area", cols: 50, rows: 6 %>
        </div>
        <%= form.submit 'Create Post', class: "hey" %>
        <div class="flex">
        </div>
        <% end %>
    </div>
  </div>
</div>